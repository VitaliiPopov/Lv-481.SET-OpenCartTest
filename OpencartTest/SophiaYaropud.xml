<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="SophiaYaropudSuite">

    <test name="ReviewTest">
            <!--MainTest-->
        <parameter name="nameOfAuthor" value="Georgiy"/>
        <parameter name="correctText" value="it is a product of amazing quality, everything works and the price is quite affordable."/>
        <parameter name="messageOfDeliveredReview" value="Thank you for your review. It has been submitted to the webmaster for approval."/>
        <parameter name="textOfSuccessfulDeletingReview" value=" Success: You have modified reviews!"/>
            <classes>
                <!--MainTest-->
                <class name="test.ReviewTest">
                    <methods>
                        <include name="successfulReviewProcess"/>
                        <include name="successfullyWritingReview"/>
                    </methods>
                </class>
            </classes>
        </test> <!-- Individual -->
    <test name="UnsuccessfulReviewTest">
            <!--MainTest-->
            <parameter name="incorrectName" value="Ri"/>
            <parameter name="correctText" value="it is a product of amazing quality, everything works and the price is quite affordable."/>
            <parameter name="messageOfUndeliveredReviewBecauseOfIncorrectName" value="Warning: Review Name must be between 3 and 25 characters!"/>
            <parameter name="nameOfAuthor" value="Georgiy"/>
            <parameter name="incorrectText" value="product is amazing."/>
            <parameter name="messageOfUndeliveredReviewBecauseOfIncorrectText" value="Warning: Review Text must be between 25 and 1000 characters!"/>
            <parameter name="emptyNameField" value=""/>
            <parameter name="emptyTextField" value=""/>

            <classes>
                <!--MainTest-->
                <class name="test.UnsuccessfulReviewTest">
                    <methods>
                        <include name="unsuccessfullyWritingReviewBecauseOfIncorrectName"/>
                        <include name="unsuccessfullyWritingReviewBecauseOfIncorrectText"/>
                        <include name="unsuccessfullyWritingReviewBecauseOfIncorrectTextAndName"/>
                        <include name="unsuccessfullyWritingReviewBecauseOfEmptyNameAndTextFields"/>
                    </methods>
                </class>
            </classes>
        </test> <!-- Individual -->
</suite> <!-- Default Suite -->